{
    "extends": ["@jitsi/eslint-config", "@jitsi/eslint-config/jsdoc", "@jitsi/eslint-config/react"],
    "overrides": [
        {
            "files": ["setupTests.js", "**/*.test.js"],
            "env": {
                "jest": true,
                "node": true
            }
        }
    ],
    "parser": "@babel/eslint-parser",
    "plugins": ["@babel", "import", "jest", "react"],
    "rules": {
        "jsdoc/check-tag-names": 0,
        "jsdoc/require-description-complete-sentence": 0,
        "no-console": 1,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "16.8.2"
        }
    }
}
