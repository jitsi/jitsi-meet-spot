{
    "author": "Jitsi",
    "build": {
        "afterSign": "scripts/notarize.js",
        "productName": "Spot",
        "appId": "org.jitsi.spot",
        "mac": {
            "category": "public.app-category.business",
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist",
            "gatekeeperAssess": false,
            "hardenedRuntime": true,
            "target": [
                {
                    "arch": "universal",
                    "target": "dmg"
                },
                {
                    "arch": "universal",
                    "target": "zip"
                }
            ],
            "extendInfo": {
                "NSCameraUsageDescription": "Camera access is required in order to make video-calls.",
                "NSMicrophoneUsageDescription": "Microphone access is required in order to make calls (audio/video).",
                "NSBluetoothAlwaysUsageDescription": "Bluetooth access is required in order to detect remote controllers."
            }
        },
        "publish": {
            "provider": "github",
            "private": false,
            "publishAutoUpdate": true
        },
        "win": {
            "extraFiles": [
                {
                    "from": "C:/Windows/System32/vccorlib140.dll",
                    "to": "."
                },
                {
                    "from": "C:/Windows/System32/vcruntime140.dll",
                    "to": "."
                },
                {
                    "from": "C:/Windows/System32/vcruntime140_1.dll",
                    "to": "."
                }
            ]
        }
    },
    "description": "An electron application intended to be used to host a Spot-TV, to provide it additional functionality not available in browsers.",
    "dependencies": {
        "@jitsi/logger": "2.0.1",
        "electron-debug": "3.2.0",
        "electron-is-dev": "2.0.0",
        "electron-log": "4.4.8",
        "electron-updater": "5.3.0",
        "is-online": "10.0.0",
        "lodash": "4.17.21",
        "node-osascript": "2.1.0",
        "node-schedule": "2.1.1"
    },
    "devDependencies": {
        "@babel/eslint-parser": "7.19.1",
        "@babel/preset-env": "7.20.2",
        "@types/jest": "29.2.6",
        "@jitsi/eslint-config": "4.1.5",
        "dotenv": "16.0.3",
        "electron": "22.0.3",
        "electron-builder": "23.6.0",
        "electron-notarize": "1.2.2",
        "eslint": "8.32.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-jsdoc": "39.6.7",
        "jest": "29.3.1"
    },
    "dmg": {
        "sign": false
    },
    "license": "ISC",
    "main": "main.js",
    "name": "spot-electron",
    "productName": "Jitsi Spot",
    "repository": {
        "type": "git",
        "url": "git@github.com:jitsi/jitsi-meet-spot.git"
    },
    "scripts": {
        "dist": "electron-builder",
        "lint": "eslint .",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "test": "jest ."
    },
    "version": "1.0.0",
    "optionalDependencies": {
        "@jitsi/node-ibeacons": "0.2.0",
        "win-audio": "2.0.2"
    }
}