{
    "author": "Jitsi",
    "build": {
        "afterSign": "scripts/notarize.js",
        "productName": "Spot",
        "appId": "org.jitsi.spot",
        "mac": {
            "category": "public.app-category.business",
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist",
            "gatekeeperAssess": false,
            "hardenedRuntime": true,
            "target": [
                {
                  "arch": "universal",
                  "target": "dmg"
                },
                {
                  "arch": "universal",
                  "target": "zip"
                }
            ],
            "extendInfo": {
                "NSCameraUsageDescription": "Camera access is required in order to make video-calls.",
                "NSMicrophoneUsageDescription": "Microphone access is required in order to make calls (audio/video).",
                "NSBluetoothAlwaysUsageDescription": "Bluetooth access is required in order to detect remote controllers."
            }
        },
        "publish": {
            "provider": "github",
            "private": false,
            "publishAutoUpdate": true
        },
        "win": {
            "extraFiles": [
                {
                    "from": "C:/Windows/System32/vccorlib140.dll",
                    "to": "."
                },
                {
                    "from": "C:/Windows/System32/vcruntime140.dll",
                    "to": "."
                },
                {
                    "from": "C:/Windows/System32/vcruntime140_1.dll",
                    "to": "."
                }
            ]
        }
    },
    "description": "An electron application intended to be used to host a Spot-TV, to provide it additional functionality not available in browsers.",
    "devDependencies": {
        "@jest-runner/electron": "3.0.0",
        "babel-eslint": "10.0.3",
        "dotenv": "8.2.0",
        "electron": "21.0.0",
        "electron-builder": "23.1.0",
        "electron-notarize": "1.1.1",
        "eslint": "7.20.0",
        "eslint-config-jitsi": "github:jitsi/eslint-config-jitsi#1.0.1",
        "eslint-plugin-flowtype": "5.3.1",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsdoc": "32.2.0",
        "jest": "26.6.3"
    },
    "dmg": {
        "sign": false
    },
    "license": "ISC",
    "main": "main.js",
    "name": "spot-electron",
    "productName": "Jitsi Spot",
    "scripts": {
        "dist": "electron-builder",
        "lint": "eslint .",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "test": "jest ."
    },
    "version": "1.0.0",
    "dependencies": {
        "@jitsi/logger": "2.0.0",
        "electron-debug": "3.2.0",
        "electron-is-dev": "1.2.0",
        "electron-log": "4.4.8",
        "electron-updater": "4.3.5",
        "is-online": "9.0.0",
        "lodash": "4.17.21",
        "node-osascript": "2.1.0",
        "node-schedule": "2.1.0"
    },
    "optionalDependencies": {
        "@jitsi/node-ibeacons": "0.2.0",
        "win-audio": "2.0.2"
    }
}
